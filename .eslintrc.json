{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "object-curly-spacing": 2,
        "quotes": [2, "single", { "avoidEscape": true }],
        "semi": [2, "always"],
        "no-unused-vars": "warn",
        "react/prop-types": 0
    }
}
